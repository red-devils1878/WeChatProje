@import '/common/commom.wxss';  /*引用公共样式文件*/
.swiper-items{
  height: 100%;
  background-color: #efefef;
}
.scroll-views{
  height: 100%;
}
.service-list{
  padding: 20rpx;
}
.service-item{
  display: flex;
  padding: 14rpx 0; 
  /*border-bottom: 1rpx solid #e8e8e8;*/
  background-color: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}
.service-text{
  flex: 1;
  margin-left: 20rpx;
  width: 100%;
}
.service-text .service-tite{
  color: #333;
  width: 100%;
  font-size: 32rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.line-div{
  width: 15%;
  height: 50rpx;
