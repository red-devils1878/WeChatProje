.service-list{
	padding: 0 20rpx;
}
.service-item{
	display: flex;
	padding: 14rpx 0; 
	border-bottom: 1rpx solid #e8e8e8;
}
.service-img{
	width: 80rpx;
  height: 80rpx;
  padding-top: 8rpx;
}
.service-item image{
	width: 80rpx;
	height: 80rpx;
}
.service-text{
	flex: 1;
	margin-left: 20rpx;
	width: 100%;
}
.service-text .service-tite{
	color: #333;
	width: 100%;
	font-size: 32rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.service-city{
  height: 40rpx;
  /*margin: 10rpx 0;*/
  font-size: 28rpx;
  color: #C0C0C0;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
  font-family:LiSu,STLiti,"Microsoft YaHei",微软雅黑,"MicrosoftJhengHei",华文细黑,STHeiti,MingLiu;
}
.swiper-items{
	height: 100%;
	background-color: white;
}
.scroll-views{
  height: 100%;
}
