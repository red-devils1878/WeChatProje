@import '/common/commom.wxss';  /*引用公共样式文件*/
.service-list{
	padding: 0 20rpx;
}
.service-item{
	display: flex;
	padding: 14rpx 0; 
	border-bottom: 1rpx solid #e8e8e8;
}
.service-img{
	width: 50rpx;
  height: 50rpx;
}
.service-item-image{
	width: 50rpx;
  height: 50rpx;
}
.service-text{
  flex: 1;
  /*
	margin-left: 20rpx;*/
	width: 100%;
}
.service-text .service-tite{
	color: #333;
	width: 100%;
	font-size: 28rpx;
	white-space: nowrap;
	overflow: hidden;
  text-overflow: ellipsis;
  padding-left: 10rpx;
  height: 50rpx;
}
.service-tite-left{
  line-height: 50rpx;
}
.service-left-img{
  width: 40rpx;
  height: 30rpx;
  padding-left:20rpx;
}
.swiper-items{
  height: 100%;
  background-color: white;
}
.scroll-views{
  height: 100%;
}
/*总菜单容器*/
.menu {
  display: block;
  height: 74rpx;
  border-bottom: 2rpx solid #d2d2d2; 
}
/*一级菜单*/
.menu dt {
  font-size: 15px;
  float:left;
  width: 33%;
  height: 70rpx;
  border-right: 2rpx solid #d2d2d2;
  /*border-bottom: 2rpx solid #d2d2d2; */
  text-align: center;
  /*background-color: #f4f4f4; */
  background-color: white;
  color: #5a5a5a;
  line-height: 70rpx;
  border-top: 2rpx solid #d2d2d2; 
}
/*二级菜单外部容器样式*/
.menu dd{ 
  position: absolute;
  width: 100%;
  top:168rpx;
  left:0;
  z-index:999;
}
/*二级菜单普通样式*/
.menu li{
   font-size: 28rpx; 
   line-height: 68rpx;
   color: #575757;
   height: 68rpx;
   display: block;
   padding-left: 16rpx;
   background-color: #fff;
   border-top: 2rpx solid #dbdbdb;
}
/* 显示与隐藏 */
.show {
  display: block;
}
.hidden {
  display: none;
}
/*二级菜单高亮样式*/
.menu li.highlight{
   background-color: #f4f4f4;
   color:#5677fc
}
.service-tite-span{
  color:#ff0000
}