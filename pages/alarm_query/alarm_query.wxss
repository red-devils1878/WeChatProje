@import '/common/commom.wxss';  /*引用公共样式文件*/
.swiper-tab{
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  background-color: white;
}
.swiper-tab-list{
  font-size: 30rpx;
  display: inline-block;
  width: 33%;
  color: #777777;
}
.on{ 
  font-size: 18px;
  border-bottom: 6rpx solid #5677fc;
  font-weight: bold;
  color:#5677fc;
}
.swiper-box{
  display: block;
  height: 100%; 
  width: 100%; 
  overflow: hidden; 
  /*background-color:white;*/
}
.swiper-items{
  height: 100%;
}
.scroll-views{
  height: 100%;
}
.service-list{
  padding: 0 20rpx;
}
.service-item{
  display: flex;
  padding: 14rpx 0; 
  background-color: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}
.service-text{
  flex: 1;
  margin-left: 20rpx;
  width: 100%;
}
.service-text .service-tite{
  color: #333;
  width: 100%;
  font-size: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}