@import '/common/commom.wxss';  /*引用公共样式文件*/
.scroll-views{
  height: 100%;
}
.service-list{
	padding: 0 20rpx;
}
.service-item{
	display: flex;
	padding: 14rpx 0; 
	border-bottom: 1rpx solid #e8e8e8;
}
.service-text{
	flex: 1;
	margin-left: 20rpx;
	width: 100%;
}
.service-text .service-tite{
	color: #333;
	width: 100%;
	font-size: 32rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.zdtz_table_border_in{
  padding: 10rpx 0rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.zdtz_table_right{
  float: right;
  height: 50rpx;
  width: 55vw;
}
.zdtz_table_right_text{
  border: none;
  font-size: 4vw;
  line-height: 50rpx;
  outline: medium;
  text-align: left;
  width: 55vw;
  color: #2e3f83;
}
.zdtz_table_left{
  float: left;
  font-size: 4vw;
  height: 50rpx;
  color: #c0c0c0;
}
.info_style{
  background-color: white;
  border-radius: 10rpx;
  margin: 20rpx;
}