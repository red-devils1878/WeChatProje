@import '/common/commom.wxss';  /*引用公共样式文件*/
.container{
  position: relative;
}
.top-container{
  height: 340rpx;
  position: relative;
  display: flex;
  flex-direction: column;
}
.bg-img{
  position: absolute;
  width: 100%;
  height: 350rpx;
  z-index: -1;
}
.avatar-img{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  align-self: center;
}
.middle-container{
  height: 168rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 15rpx 74rpx 15rpx 45rpx;
  margin: -20rpx 10rpx 20rpx 10rpx;
  background-color: #FFFFFF;
  border-radius: 10rpx;
  box-sizing: border-box;
  box-shadow: 0 0 10rpx #efefef
}
.middle-item-img{
  width: 80rpx;
  height: 80rpx;
}
.middle-item{
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.bottom-container{
  height: 590rpx;
  /*height: 470rpx;
  height: 350rpx;*/
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 30rpx 74rpx 30rpx 45rpx;
  margin: 0 10rpx;
  background-color: #FFFFFF;
  border-radius: 10rpx;
  box-sizing: border-box;
  box-shadow: 0 0 10rpx #efefef
}
.ul-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.item{
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.item-img{
  width: 64rpx;
  height: 64rpx;
}
.item-name{
  padding-top: 13rpx;
  font-size: 26rpx;
  /*color: #666666;*/
  min-width: 80rpx;
  text-align: center;
  color:#C0C0C0;
  font-family:LiSu,STLiti,"Microsoft YaHei",微软雅黑,"MicrosoftJhengHei",华文细黑,STHeiti,MingLiu;
}
.avatar {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.avatar-img{
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  align-self: center;
  background: transparent;
  display: inline-block;
  position: fixed;
  top:50px;
  left: 42%;
}
.scroll-views{
  height: 100%;
  overflow-y: auto;
}
/*隐藏滚动条*/
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}
.cc:hover{
  background-color: rgba(255, 255, 255, 0.459);
}
.xz{
  background-color: rgba(255, 255, 255, 0.459);
}
.cc{
  background-color: rgb(117, 117, 117,0);
}
.show_roomList{
  width: auto;
  z-index: 10000;
  padding: 5px;
  position: fixed;
  left: 60vw;
  top: 7vh;
  /*width: 45%;*/
  height: 300rpx;
  background-color: rgb(70, 70, 70);
  color: #fff;
  overflow: scroll;
  border-radius: 5px;
}
/*以下为弹出框样式*/
.toastbgT {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.showToastT {
  /*width: 220rpx;
  height: 130rpx;*/
  border-radius: 50%;
  align-self: center;
  background: transparent;
  display: inline-block;
  position: fixed;
  top:1%;
  left: 2%;
}
.toast-mainT {
  padding: 10rpx 0rpx;
  text-align: center;
  opacity: 0.6;
  background-color: black;
  color: white;
  border-radius: 10rpx;
}
/*以上为弹出框样式*/
.curtain{
  width:100%;
  height:100%;
  position:fixed;
  /*background-color:#999;*/
  background-color: black;
  z-index:9999;
  top:0;
  left:0;
  opacity:0.4;
}
