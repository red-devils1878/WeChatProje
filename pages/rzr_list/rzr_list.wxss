@import '/common/commom.wxss';  /*引用公共样式文件*/
.swiper-items{
  height: 100%;
}
.scroll-views{
  height: 100%;
}
/*总菜单容器*/
.menu {
  display: block;
  height: 74rpx;
  border-bottom: 2rpx solid #d2d2d2; 
}
/*一级菜单*/
.menu dt {
  font-size: 15px;
  float:left;
  width: 33%;
  height: 74rpx;
  border-right: 2rpx solid #d2d2d2;
  text-align: center;
  background-color: white;
  color: #5a5a5a;
  line-height: 74rpx;
}
/*二级菜单外部容器样式*/
.menu dd{ 
  position: absolute;
  width: 100%;
  top:168rpx;
  left:0;
  z-index:999;
}
/*二级菜单普通样式*/
.menu li{
   font-size: 28rpx; 
   line-height: 68rpx;
   color: #575757;
   height: 68rpx;
   display: block;
   padding-left: 16rpx;
   background-color: #fff;
   border-top: 2rpx solid #dbdbdb;
}
/* 显示与隐藏 */
.show {
  display: block;
}
.hidden {
  display: none;
}
/*二级菜单高亮样式*/
.menu li.highlight{
   background-color: #f4f4f4;
   color:#5677fc
}
