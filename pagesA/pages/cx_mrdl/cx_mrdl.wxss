@import '/common/commom.wxss';  /*引用公共样式文件*/
.swiper-items{
  height: 100%;
}
.scroll-views{
  height: 100%;
}
.service-list{
  padding: 0 20rpx;
}
.service-item{
  display: flex;
  padding: 14rpx 0; 
  /*background-color: #ffffff;*/
  background-color: #e8e8e8;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}
.service-text{
  flex: 1;
  margin-left: 20rpx;
  width: 100%;
}
.service-text .service-tite{
  color: #333;
  width: 100%;
  font-size: 32rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.dd_style{
  color: #ff0000;
}
.dd_style2{
  color: #333;
}
.dd_style3{
  color: #f7982a;
}
.query_style_l{
  /*margin: 20rpx 0rpx;*/
  margin-top: 20rpx;
  background-color: white;
  width: 35%;
  padding: 4rpx 20rpx;
  border: 2rpx solid;
}
.title_span{
  /*margin: 20rpx 0;*/
  margin-top: 20rpx;
  height: 72rpx;
  line-height: 72rpx;  
}
.button_left{
  font-size: 14px;
  width: 20%;
  background-color: #f7982a;
  text-align: center;
  border-radius: 10rpx;
  color: #ffffff;
  margin: 20rpx 0rpx 0 10rpx;
  height: 72rpx;
  line-height: 72rpx;  
}
.hidenScroll{
  position: fixed;
  top:0;
  left: 0;
  width: 100%;
}