@import '/common/commom.wxss';  /*引用公共样式文件*/
.swiper-items{
  height: 100%;
}
.scroll-views{
  height: 100%;
}
.service-list{
  padding: 0 20rpx;
}
.service-item{
  display: flex;
  padding: 14rpx 0; 
  /*background-color: #ffffff;*/
  background-color: #e8e8e8;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}
.service-text{
  flex: 1;
  margin-left: 20rpx;
  width: 100%;
}
.service-text .service-tite{
  color: #333;
  width: 100%;
  font-size: 32rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.date_style{
  margin: 20rpx 0rpx;
  background-color: white;
  padding: 4rpx 20rpx;
  border: 2rpx solid
}
.form_date_right_text{
  border: none;
  font-size: 4vw;
  line-height: 50rpx;
  outline: medium;
  text-align: center;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 5vh;
  line-height: 5vh;
  align-items: center;
}
.form_info_bot_td2_r{
  width:23%;
  text-align:center;
  line-height: 5vh;
  font-size: 3.5vw;
  background-color:#e8e8e8;
  /*color:white;*/
  border-radius: 10rpx;
}
.showBorder{
  border: 4rpx solid #000000;
  font-weight: bold;
}
.hidenScroll{
  position: fixed;
  top:0;
  left: 0;
  width: 100%;
}