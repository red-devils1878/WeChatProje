@import '/common/commom.wxss';  /*引用公共样式文件*/
.table_center{
  display: flex;
  height: 50rpx;
  width: 80%;
}
.form_table_detail_left{
  float: left;
  font-size: 4vw;
  height: 50rpx;
  color: #c0c0c0;
}
.form_table_detail_right_text{
  border: none;
  font-size: 4vw;
  line-height: 50rpx;
  outline: medium;
  text-align: right;
  width: 100%;
  color: #c0c0c0;
}
.arrow_bottom{
  width: 0;
  height: 0;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-top: 20rpx solid #cfcbcb;
  position: absolute;
  right: 50rpx;
  margin-top: -32rpx;
}
.arrow_top{
  width: 0;
  height: 0;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-bottom: 20rpx solid #cfcbcb;
  position: absolute;
  right: 50rpx;
  margin-top: -32rpx;
}
.curtain{
  width:100%;
  height:100%;
  position:fixed;
  background-color: black;
  z-index:9999;
  top:0;
  left:0;
  opacity:0.4;
}