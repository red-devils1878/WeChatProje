.service-list{
	padding:0 20rpx;
}
.service-item{
	display: flex;
  padding: 10rpx; 
  background-color: white;
  border-radius: 16rpx;
	/*border-bottom: 1rpx solid #e8e8e8;*/
  justify-content: space-between;
  margin-bottom: 24rpx;
  /*height: 180rpx;
  line-height: 180rpx;
  width: 100%;*/
}
.service-text{
	flex: 1;
	width: 100%;
}
.text{
	width: 100%;
	white-space: nowrap;
	overflow: hidden;
  text-overflow: ellipsis;
  /*
	height: 200rpx;
  line-height: 200rpx;*/
}
.service-tite{
	color: #c0c0c0;
	/*width: 100%;*/
	font-size: 32rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	height: 50rpx;
  line-height: 50rpx;
}
.service-city{
	height: 40rpx;
	line-height: 40rpx;
  margin-top: -10rpx;
  font-size: 28rpx;
  color: #C0C0C0;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
}
.swiper-items{
  height: 100%;
  background-color:#fafafa;
}
.scroll-views{
  height: 100%;
}
.button-left-type{
  background-color: #50b6e6;
  border-radius: 10rpx;
  color: white;
  padding: 4rpx 20rpx;
  margin-right:30rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.button-right-type{
  background-color: #50b6e6;
  border-radius: 10rpx;
  color: white;
  padding: 4rpx 20rpx;
  /*margin:0 20rpx;*/
  height: 50rpx;
  line-height: 50rpx;
}
.curtain{
  width:100%;
  height:100%;
  position:fixed;
  background-color: black;
  z-index:9999;
  top:0;
  left:0;
  opacity:0.4;
}
.middle-item-img{
  width: 80rpx;
  height: 80rpx;
}
.item{
  display: flex;
  flex-direction: column;
  align-items: center;
  /*position: relative;
  width: 20%;*/
  position:fixed;
  top:0;
  width: 100%;
}
.title-name{
  padding-top: 10rpx 0;
  font-size: 32rpx;
  min-width: 80rpx;
  text-align: center;
  color:#000000;
  font-weight: bold;
}