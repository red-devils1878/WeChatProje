@import '/common/commom.wxss';  /*引用公共样式文件*/
.swiper-items{
  height: 100%;
}
.scroll-views{
  height: 100%;
}
.service-list{
  padding: 0 20rpx;
}
.service-item{
  display: flex;
  padding: 14rpx 0; 
  background-color: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}
.service-text{
	flex: 1;
	margin-left: 20rpx;
	width: 100%;
}
.service-text .service-tite{
	color: #333;
	width: 100%;
	font-size: 32rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.line-div{
    width: 15%;
    height: 50rpx;
    line-height: 50rpx;
    position: absolute;
    text-align: center;
    margin-left: 45%;
    -webkit-transform: rotate(40deg);
    -moz-transform: rotate(25deg);
    background-color: rgb(92,197,113);
    color: white;
    margin-top: -90rpx;
    font-size: 28rpx;
}
.line-div2{
    width: 15%;
    height: 50rpx;
    line-height: 50rpx;
    position: absolute;
    text-align: center;
    margin-left: 45%;
    -webkit-transform: rotate(40deg);
    -moz-transform: rotate(25deg);
    background-color: #e8e8e8;
    color: white;
    margin-top: -90rpx;
    font-size: 28rpx;
}
.service-img{
  width: 100rpx;
  height: 100rpx;
  margin:20rpx 0 0 10rpx;
}
.service-item image{
  width: 100rpx;
  height: 100rpx;
}
.checked_type{
  line-height: 144rpx;
  margin-left: 30rpx; 
  transform: scale(0.9,0.9);
}
.form_info_bot1{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 7vh;
  border-top: 1px solid #e6e6e6;
  background-color: white;
}
.middle-item-radio{
  transform: scale(0.9);
}
.form_info_bot_td2_r2{
  margin-left: 30rpx;
  width:35%;
  text-align:center;
  font-size: 4vw;
  background-color:rgb(36,38,50);
  color:white;
  border-radius: 10rpx;
  line-height: 50rpx;
}