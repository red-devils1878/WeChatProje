@import '/common/commom.wxss';  /*引用公共样式文件*/
.swiper-tab{
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  background-color: white;
}
.swiper-tab-list{  
  font-size: 30rpx;
  display: inline-block;
  width: 33.33%;
  color: #777777;
}
.on{ 
  /*color:#5677fc;*/
  /*border-bottom: 4rpx solid #5677fc;*/
  font-size: 18px;
  border-bottom: 6rpx solid #5677fc;
  font-weight: bold;
}
.swiper-box{ 
  display: block;
  height: 100%; 
  width: 100%; 
  overflow: hidden; 
  background-color: white;
}
.swiper-items{
  height: 100%;
}
.scroll-views{
  height: 100%;
}
.form_show_border_in{
  padding:20rpx 0rpx;
  height:20rpx;
  line-height:20rpx;
}
.form_show_left{
  float:left;
  font-size:3.5vw;
  height:20rpx;
  color: #afadad;
}
.form_show_right{
  float:right;
  height:20rpx;
  width:85%;
}
.form_show_right_text{
  font-size:3.5vw;
}
.form_info_bot1{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 7vh;
  border-top: 1px solid #e6e6e6;
  background-color: white;
}
.service-list{
  padding: 0 20rpx;
}
.service-item{
  display: flex;
  padding: 14rpx 0; 
  border-bottom: 1rpx solid #e8e8e8;
}
.service-text{
  flex: 1;
  margin-left: 20rpx;
  width: 100%;
}
.service-text .service-tite{
  color: #333;
  width: 100%;
  font-size: 32rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.title-right-span{
  float:right;
  color: #5677fc;
  background-color: #e8e8e8;
  border-radius: 10rpx;
  padding: 0 10rpx;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 7vh;
  line-height: 7vh;
  align-items: center;
}
.form_info_bot_td2_tz{
  width:100%;
  text-align:center;
  line-height: 7vh;
  font-size: 4vw;
  background-color:#5677FC;
  color:white;
}
.form_info_bot_td2_r{
  width:50%;
  text-align:center;
  line-height: 7vh;
  font-size: 4vw;
  background-color:#5677FC;
  color:white;
}
.action_table_title{
  font-size: 4.5vw;
  font-weight: bold;
  text-align: center;
}
.action_table_text{
  text-align: center;
  font-size: 4vw;
  height: 50rpx;
}
.action_table_span{
  color: #ff0000;
  font-weight: bold;
}
.service-tite-right{
  width: 30%;
  text-align: right;
  font-size: 30rpx;
  color:#04BE02;
}
.service-tite-rightHC{
  width: 30%;
  text-align: right;
  font-size: 30rpx;
  color: #ff0000;
  text-decoration:line-through;
}
.title_form_line{
  height: 60rpx;
  line-height: 60rpx;
  background-color: #fafafa;
  border: 0;
}
.span-title{
  padding-left: 40rpx;
}
.curtain{
  width:100%;
  height:100%;
  position:fixed;
  background-color: black;
  z-index:9999;
  top:0;
  left:0;
  opacity:0.4;
}