/* pages/report_zk/report_zk.wxss */
@import '/common/commom.wxss';  /*引用公共样式文件*/
.rpt_title{
  height: 80rpx;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}
.rpt_table_border_in{
  height: 50rpx;
  line-height: 50rpx;
}
.rpt_table_left{
  float: left;
  font-size: 4vw;
  height: 48rpx;
  border-bottom: 2rpx solid;
}
.rpt_table_left_none{
  float: left;
  font-size: 4vw;
  height: 48rpx;
}
.rpt_table_title_none{
  margin: 10rpx 40rpx;
}
.rpt_table_title_one{
  float: left;
  font-size: 4vw;
  height: 50rpx;
  font-weight: bold;
}
.rpt_table_title_two{
  float: left;
  font-size: 4vw;
  height: 50rpx;
  font-weight: bold;
  margin: 10rpx 0rpx;
}
.scroll-views{
  height: 100%;
}
.form_show_right_text{
  font-size:4vw;
}
.form_info_bot1{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 7vh;
  border-top: 1px solid #e6e6e6;
  background-color: white;
}
/*账单表格样式*/
.table {
  padding: 0 40rpx;
  border: 0px solid darkgray;
 }
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  word-wrap: break-word;
}
.td{
  width:25%;
  justify-content: center;
  text-align: center;
  border: 1rpx solid;
  height: 100rpx;
  line-height: 100rpx;
}
.td1{
  width:45%;
  justify-content: center;
  text-align: center;
  border: 1rpx solid;
  height: 100rpx;
  word-wrap: break-word;
}
.td2{
  width:35%;
  justify-content: center;
  text-align: center;
  border: 1rpx solid;
  height: 100rpx;
  word-wrap: break-word;
}
.th{
  width: 25%;
  justify-content: center;
  display: flex;
  height: 100rpx;
  align-items: center;
  border: 1rpx solid;
}
.th1{
  width: 45%;
  justify-content: center;
  display: flex;
  height: 100rpx;
  align-items: center;
  border: 1rpx solid;
}
.th2{
  width: 35%;
  justify-content: center;
  display: flex;
  height: 100rpx;
  align-items: center;
  border: 1rpx solid;
}
 /*账单表格样式结束*/
.underline{
  text-decoration: underline;
}