<view class="container" style="background-color:#fafafa;">
<form bindsubmit="formSave" catchtap="noop" catchreset="formReset">
  <view style="background-color: white;">
  <view class="form_table_border">
      <view class="form_table_border_in">
          <view class="form_table_left">尖电价</view>
          <view class="form_table_right">
              <input type="digit" class="form_table_right_text" style="width: 47vw;" name="jdj" placeholder-style="color:#c0c0c0" value="{{price_j}}" placeholder="请填写电费" bindinput="jdjChange"/>
          </view>
          <view style="position: absolute;right: 40rpx;margin-top: 6rpx;">(元/度)</view>
          <view class="clear"></view>
      </view>
  </view>
  <view class="form_table_border">
      <view class="form_table_border_in">
          <view class="form_table_left">峰电价</view>
          <view class="form_table_right">
              <input type="digit" class="form_table_right_text" style="width: 47vw;" name="fdj" placeholder-style="color:#c0c0c0" value="{{price_f}}" placeholder="请填写电费" bindinput="fdjChange"/>
          </view>
          <view style="position: absolute;right: 40rpx;margin-top: 6rpx;">(元/度)</view>
          <view class="clear"></view>
      </view>
  </view>
  <view class="form_table_border">
      <view class="form_table_border_in">
          <view class="form_table_left">平电价</view>
          <view class="form_table_right">
              <input type="digit" class="form_table_right_text" style="width: 47vw;" name="pdj" placeholder-style="color:#c0c0c0" value="{{price_p}}" placeholder="请填写电费" bindinput="pdjChange"/>
          </view>
          <view style="position: absolute;right: 40rpx;margin-top: 6rpx;">(元/度)</view>
          <view class="clear"></view>
      </view>
  </view>
  <view class="form_table_border">
      <view class="form_table_border_in">
          <view class="form_table_left">谷电价</view>
          <view class="form_table_right">
              <input type="digit" class="form_table_right_text" style="width: 47vw;" name="gdj" placeholder-style="color:#c0c0c0" value="{{price_g}}" placeholder="请填写电费" bindinput="gdjChange"/>
          </view>
          <view style="position: absolute;right: 40rpx;margin-top: 6rpx;">(元/度)</view>
          <view class="clear"></view>
      </view>
  </view>
  </view>
  <view class="form_table_border" style="margin-top:40rpx;">
    <view class="form_table_border_in">
      <button type="primary" formType="submit" style="background-color: #5677FC;margin-bottom:auto;">确认</button>
    </view>
  </view>
</form>
</view>
