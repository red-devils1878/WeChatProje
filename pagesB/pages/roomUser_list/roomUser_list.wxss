.service-list{
  padding: 0 20rpx;
}
.service-item{
  display: flex;
  padding: 14rpx 0; 
  background-color: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}
.service-text{
	flex: 1;
	margin-left: 20rpx;
	width: 100%;
}
.service-text .service-tite{
	color: #333;
	width: 100%;
	font-size: 32rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.service-img{
  width: 100rpx;
  height: 100rpx;
  margin:20rpx 0 0 10rpx;
}
.service-item image{
  width: 100rpx;
  height: 100rpx;
