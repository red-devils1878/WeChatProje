                <button type="primary" size="mini" style="background-color: #5677FC;margin-bottom:auto;" bindtap="bindDF">抄表</button>
              </view>
        </view>
  </view>
  <view class="form_view">
    <textarea class="form_textarea" disabled="true" value="{{use_dl}}"></textarea>
    <textarea class="form_textarea" disabled="true" value="{{amount_dl}}"></textarea>
  </view>
