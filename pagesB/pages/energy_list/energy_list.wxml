<view class="nav" style="height:{{navH}}px">
  <view class="title_icon">
    <mp-icon bindtap='tapInfo' data-index="1"  color="white" icon="back" type="filled" size="12"></mp-icon>
    <label style="color: white;padding-left: 288rpx;">水电煤</label>
    <label bindtap='tapInfo' data-index="2" style="color: white;padding-left: 40rpx;">单价</label>
  </view>
</view>
<view class="container" style="background-color: #fafafa;margin-top: {{navH}}px;">
