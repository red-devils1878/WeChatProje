        <view class="form_table_border_in" style="height: 20rpx;">
              <view class="form_table_left" style="font-weight: bold;width: 80%;font-size: 32rpx;">水费  <span style="font-weight:normal;color:#c0c0c0">{{price_sf}}元/吨</span></view>
              <view  style="float: right;">
                <button type="primary" size="mini" style="background-color: #5677FC;margin-bottom:auto;" bindtap="bindSF">抄表</button>
              </view>
        </view>
  </view>
  <view class="form_view">
    <textarea class="form_textarea" disabled="true" value="{{use_sl}}"></textarea>
    <textarea class="form_textarea" disabled="true" value="{{amount_sl}}"></textarea>
  </view>
  <view class="form_table_border" style="border: none;height: 100rpx;">
        <view class="form_table_border_in" style="height: 20rpx;">
              <view class="form_table_left" style="font-weight: bold;width: 80%;font-size: 32rpx;">电费  <span style="font-weight:normal;color:#c0c0c0">{{price_df}}元/度</span></view>
